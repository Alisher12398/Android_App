<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Main.FoodsFragment_3"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imageview_fragment_foods_3_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/food1"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_fragment_foods_3_title"


        />

    <TextView
        android:id="@+id/textview_fragment_foods_3_title"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:text="Test title"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:gravity="center|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_fragment_foods_3_image"
        app:layout_constraintBottom_toTopOf="@id/textview_fragment_foods_3_description"
        />

    <TextView
        android:id="@+id/textview_fragment_foods_3_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Test description"
        android:textSize="23sp"

        app:layout_constraintTop_toBottomOf="@id/textview_fragment_foods_3_title"
        />

    <Button
        android:id="@+id/button_fragment_foods_3_choose"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/textview_fragment_foods_3_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:text="cook today!"
        android:layout_marginTop="20dp"
        />





</android.support.constraint.ConstraintLayout>