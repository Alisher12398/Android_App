<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Main.SettingsFragment">

    <ImageView
        android:id="@+id/login_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        android:tint="#40000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_fragment_settings"
        android:layout_width="380dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorWhite"

        app:cardCornerRadius="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_fragment_settings"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/textview_fragment_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="Test"
            android:textSize="26sp"
            android:gravity="center"/>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_fragment_settings"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_button"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="card_fragment_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />


</android.support.constraint.ConstraintLayout>